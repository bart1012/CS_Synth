<UserControl x:Class="AudioApp.Controls.OctaveSelectorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AudioApp.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Border CornerRadius="50" BorderBrush="Wheat" BorderThickness="1" Width="50" Height="50" Background="GhostWhite">
            <Button  Background="Transparent" BorderBrush="Transparent" Foreground="Black" Click="UpButton_Click">▲</Button>
        </Border>
        <Border CornerRadius="50" BorderBrush="Wheat" BorderThickness="1" Width="50" Height="50" Background="GhostWhite">
            <Button  Background="Transparent" BorderBrush="Transparent" Foreground="Black" Click="DownButton_Click">▼</Button>
        </Border>
    </StackPanel>
</UserControl>
