<Window x:Class="AudioApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AudioApp.Controls"
        xmlns:controls="clr-namespace:AudioApp.Controls"
        mc:Ignorable="d"
        Title="Bart's Synth" Height="450" Width="800" KeyDown="Window_KeyDown" KeyUp="Window_KeyUp">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>
        <ComboBox Grid.Column="0" Name="WaveformType" SelectionChanged="ComboBox_OnSelectionChanged" Width="75" Height="25">
            <ComboBoxItem Content="Sin" IsSelected="True"></ComboBoxItem>
            <ComboBoxItem Content="Square"></ComboBoxItem>
            <ComboBoxItem Content="Triangle"></ComboBoxItem>
            <ComboBoxItem Content="SawTooth"></ComboBoxItem>
        </ComboBox>
        <controls:KnobControl Caption="Tremolo Depth" Grid.Row="1" x:Name="TremoloDepthControl" Width="332"/>
        <controls:KnobControl Caption="Tremolo Frequency" Grid.Row="2" x:Name="TremoloFrequencyControl" Width="332"/>
        <Slider x:Name="VolumeSlider" Grid.Column="1" Width="150" Height="25" Orientation="Horizontal" Value="0.5" Minimum="0" Maximum="1" SmallChange="0.1" LargeChange="0.25" TickFrequency="10" TickPlacement="Both" />
        <Slider x:Name="OctaveSlider" Grid.Column="2" Width="150" Height="25" Orientation="Horizontal" Value="2" Minimum="1" Maximum="3" SmallChange="1" LargeChange="1" TickFrequency="1" TickPlacement="Both" />

    </Grid>
</Window>
